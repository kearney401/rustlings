{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "id": "hint",
            "description": "Specify hint",
            "type": "promptString"
        }
    ],
    "tasks": [
        {
            "label": "Rustlings Watch",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "watch"
            ]
        },
        {
            "label": "Rustlings Verfiy",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "verify"
            ]
        },
        {
            "label": "Rustlings Hint",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "hint",
                "${input:hint}"
            ]
        }
    ]
}